                <use xlink:href="#icon-socialcss3"></use>
                </svg>

                <svg class="icon" aria-hidden="true" transform=translate(0,0)>
                <use xlink:href="#icon-JS"></use>
                </svg>


                <svg class="icon" aria-hidden="true" transform=translate(0,0)>
                <use xlink:href="#icon-vuejs"></use>
                </svg>


                <svg class="icon" aria-hidden="true" transform=translate(0,0)>
                <use xlink:href="#icon-download_react-native"></use>
                </svg>
            </div>
        </section>

        {{#if @labs.subscribers}}
          <section class="gh-subscribe">
            <h3 class="gh-subscribe-title">Subscribe to {{@blog.title}}</h3>
            <p>Get the latest posts delivered right to your inbox.</p>
            {{subscribe_form placeholder="Your email address"}}
            <span class="gh-subscribe-rss">or subscribe <a href="{{@blog.url}}/rss/">via RSS</a> with Feedly!</span>
          </section>
        {{/if}}

        {{> comments}}

        <aside class="read-next">
          {{#next_post}}
          <a class="read-next-story {{#if feature_image}} lazy" data-url="{{feature_image}}" style="background-image: url(){{else}}no-cover{{/if}}" href="{{url}}">
            <section class="post">
              <h2>{{title}}</h2>
              <p>{{excerpt words="6"}}&hellip;</p>
            </section>
          </a>
          {{/next_post}}
          {{#prev_post}}
        <a class="read-next-story prev {{#if feature_image}} lazy" data-url="{{feature_image}}" style="background-image: url(){{else}}no-cover{{/if}}" href="{{url}}">
          <section class="post">
              <h2>{{title}}</h2>
              <p>{{excerpt words="6"}}&hellip;</p>
            </section>
        </a>
        {{/prev_post}}
      </aside>
</main>
<script type="text/javascript" src="{{asset "js/prism.js"}}"></script>
{{/post}}
