{{!< default}}
{{#post}}
    <div id="page" class="site">
    {{> sidebar}}
    {{> search}}
    <div class="overlay"></div>
    </div>
    <button class="go-back" onclick="window.history.back()"><i class="fa fa-chevron-left" style="font-size:30px;color:#fff;"></i></button>
    <a class="search-toggle" href="#"><i class="fa fa-search" style="font-size:30px;"></i></a>
		<a class="sidebar-toggle" href="#"><span class="icon-nav-custom" aria-hidden="true" style="color:#fff;background:#fff;height:4px;"></span></a>
    <header class="cover post-header">
				{{#if feature_image}}
        <div class="cover-bg" style="background-image: url({{feature_image}})"></div>
				{{/if}}
				<div class="cover-content">
					<div class="inner">
						{{#if tags}}
						<div class="post-page-tags" style="text-align:center;margin-top:0;margin-bottom:15px;">
							{{tags separator=""}}
						</div><!-- .post-tags -->
						{{/if}}
						<h1 class="post-title" style="padding-bottom: 30px;margin-bottom: 30px;">{{title}}</h1>
						<div class="post-meta">
              <span class="post-meta-wrap">{{#if primary_author.profile_image}}<img class="author-avatar" src="{{primary_author.profile_image}}" />{{/if}} <span class="post-author">{{authors}}</span> <time class="published" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time></span> <span class="reading-time">Estimate {{reading_time}}</span>
						</div>
            <div id="scroll-hint" class="header-scroll-hint hide-on-menu">
                <i class="fa fa-chevron-down"></i>
            </div>
					</div>
				</div>
			</header>

<main class="content" id="main" role="main">
    <aside id="toc">
      <h4>文章目录</h4>
    </aside>
    <article class="{{post_class}}">
     <section class="post-content">
     <div class="single-post-inner">
        {{content}}
        <div class="tag-box">
          {{tags prefix="" separator=" "}}
        </div>
        <div class="money-like" id="like-money">
            <div class="reward-button">赏
            <span class="money-code" style="width: 294.8px;height: 172.4px;">
            <span class="alipay-code">
                <a href="javascript:;">
                <img data-url="{{asset "images/qr-alipay-255.png"}}" class="alipay-img" src="data:image/gif;base64,UklGRkoAAABXRUJQVlA4WAoAAAAQAAAAAAAAAAAAQUxQSAsAAAABBxAREYiI/gcAAABWUDggGAAAADABAJ0BKgEAAQABABwlpAADcAD+/gbQAA=="><b>支付宝扫码打赏</b>
                </a>
            </span>
            <span class="wechat-code">
                <img data-url="{{asset "images/qr-wechat-255.png"}}" class="wechat-img" src="data:image/gif;base64,UklGRkoAAABXRUJQVlA4WAoAAAAQAAAAAAAAAAAAQUxQSAsAAAABBxAREYiI/gcAAABWUDggGAAAADABAJ0BKgEAAQABABwlpAADcAD+/gbQAA=="><b>微信打赏</b>
            </span>
            </span>

            </div>
            <p class="money-notice">若你觉得我的文章对你有帮助,欢迎点击上方按钮对我打赏</p>
        </div>
        <div class="qr-code">
            <img src="https://encrypt.proxy.is26.com/qr?content={{url absolute="true"}}" alt="">
            <p>扫描二维码,分享此文章</p>
        </div>
     </div>
    </section>
    {{#primary_author}}
                <section class="author">
                 {{#if profile_image}}
            <figure class="author-image">
                <a class="img" href="javascript:;" style="background-image: url('{{profile_image}}')"><span class="hide">{{name}}'s Picture</span></a>
            </figure>
              {{/if}}

            <section class="author-detail">
                <a href="javascript:;">{{name}}</a>
            {{#if bio}}
                 <p>{{bio}}</p>
            {{else}}
                <p>Read <a href="{{url}}">more posts</a> by this author.</p>
            {{/if}}
                <div class="author-meta">
                     {{#if location}}
                    <span class="author-location">{{location}}</span>
                    {{/if}}
                     {{#if website}}
                    <span class="author-link"><a href="{{website}}">{{website}}</a></span>
                    {{/if}}
                </div>

            </section>
        </section>
        {{/primary_author}}


    </article>

